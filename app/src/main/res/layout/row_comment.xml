<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewComment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_container"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorPrimaryVariant"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|start"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_container"
        android:paddingVertical="@dimen/padding_container"
        android:showDividers="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|clip_vertical|start"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewNewComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@drawable/edit_text_background"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/image_no_image_available"
                    app:srcCompat="@mipmap/image_no_image_available"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="pad"
                android:paddingHorizontal="@dimen/padding_container">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblUsernameCommentRow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lblUsernameCommentRow"
                        android:textAllCaps="true" />

                    <TextView
                        android:id="@+id/lblRatingFieldRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/padding_container"
                        android:background="@drawable/rating_background"
                        android:paddingHorizontal="@dimen/padding_container"
                        android:text="@string/lblRatingFieldRow"
                        android:textAllCaps="true" />

                    <RatingBar
                        android:id="@+id/ratingBarCommentRow"
                        style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progressTint="@color/colorSecondary"
                        android:rating="3.5"
                        android:stepSize="0.5" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lblDateCommentRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/lblDateCommentRow" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textCommentRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:text="@string/textCommentRow"
            android:textAlignment="textStart"
            android:textAllCaps="false" />

    </LinearLayout>

</androidx.cardview.widget.CardView>